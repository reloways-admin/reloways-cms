{
  "kind": "collectionType",
  "collectionName": "knowledge_articles",
  "info": {
    "singularName": "knowledge-article",
    "pluralName": "knowledge-articles",
    "displayName": "Knowledge Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "Title": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "Slug": {
      "type": "uid",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "targetField": "Title",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isEssential": {
      "type": "boolean",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "default": false
    },
    "estimatedReadingTime": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "Content": {
      "type": "blocks",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": false
    },
    "Category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::knowledge-category.knowledge-category"
    },
    "Order": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "Author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::person.person"
    },
    "VerifiedBy": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::person.person"
    },
    "VerifiedAt": {
      "type": "date",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "locations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::location.location",
      "inversedBy": "knowledge_articles"
    },
    "ContentBlocks": {
      "type": "dynamiczone",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "components": [
        "media.spotify-embed",
        "content.text-block",
        "knowledge.checklist-smart",
        "knowledge.smart-checklist-group",
        "knowledge.smart-checklist-picker",
        "category.disclaimer"
      ]
    },
    "SmartChecklist": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "knowledge.checklist-smart",
      "repeatable": true
    },
    "metaSEO": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "shared.meta-seo",
      "repeatable": false
    }
  }
}
